---
import { getCollection, getEntryBySlug } from 'astro:content'
import BlogPost from '@layouts/BlogPost.astro'

export async function getStaticPaths () {
	const posts = await getCollection('blog')

	return posts.map((post) => ({
		params: {
			slug: post.slug
		},
		props: post
	}))
}

