---
import BaseHead from '@components/BaseHead.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import FormattedDate from '@components/FormattedDate.astro'
import { SITE_DESCRIPTION, SITE_TITLE } from 'src/consts'

const { title, description, pubDate } = Astro.props
---

<html lang='es'>
	<head>
		<BaseHead
			title={title ?? SITE_TITLE}
			description={description ?? SITE_DESCRIPTION}
		/>
		<base target='_blank' />
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1' />
		<link
			rel='stylesheet'
			href='https://cdn.jsdelivr.net/npm/instantsearch.css@8.0.0/themes/satellite-min.css'
			integrity='sha256-p/rGN4RGy6EDumyxF9t7LKxWGg6/MZfGhJM/asKkqvA='
			crossorigin='anonymous'
		/>
	</head>
	<body class={'pt-20'}>
		<main>
			<article
				class='text-xl tracking-wide leading-relaxed font-normal text-slate-800 max-w-4xl mx-auto px-4 overflow-auto'
			>
				<Header />
				<button onclick='history.back()' id='go-back'>Go back!</button>

				<h1
					class={`text-3xl ${
						!title?.at(0) ? 'pb-0' : 'pb-4'
					} sm:text-4xl text-slate-800 font-semibold`}
				>
					{title?.at(0).toUpperCase() + title?.slice(1).replaceAll('_', ' ')}
				</h1>
				{pubDate && <FormattedDate date={pubDate} />}
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
