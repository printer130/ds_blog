---
import BaseHead from '@components/redteam/BaseHead.astro'
import Footer from '@components/redteam/Footer.astro'
import { URLs } from 'src/consts'
import Header from '@components/Header.astro'

const { title, description, pubDate, updatedDate, heroImage } = Astro.props

const { pathname } = Astro.url
---

<html lang='es'>
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body
		class=`text-xl min-h-screen relative pb-12 ${pathname.includes(URLs.BLACK_OR_WHITE) && 'bg-[#050014]'}`
	>
		<Header />
		<main
			class="max-w-4xl m-auto w-full font-['Open_Sans'] px-4 whitespace-wrap isolate"
		>
			<div
				class="opacity-10 inset-0 bg-[url('/noise.webp')] mix-blend-overlay absolute -z-20"
			>
			</div>

			{heroImage && <img width={720} height={360} src={heroImage} alt='' />}
			<h1 class='title'>{title}</h1>
			<slot />
		</main>
		<!-- <Footer /> -->
	</body>
</html>
