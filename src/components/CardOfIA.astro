---
import FormattedDate from './FormattedDate.astro'

const { title, slug, pubDate, description } = Astro.props
---

<a href=`/ia/${slug}` target='_self'>
	<li class='w-full mb-8 py-4 rounded-lg list-none'>
		<h2
			class='mb-2 text-2xl font-semibold sm:font-bold text-slate-800 pt-0 pb-0'
		>
			{title}
		</h2>
		<FormattedDate date={pubDate} />
		<p class='mb-5 px-0 mt-0 text-base text-slate-800 sm:text-lg tracking-wide'>
			{description}
		</p>

		<div
			class='items-center justify-left space-y-4 sm:flex sm:space-y-0 sm:space-x-4'
		>
		</div>
	</li>
</a>
