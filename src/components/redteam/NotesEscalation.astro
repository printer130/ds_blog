---
import Title from '@components/redteam/Title.astro'
import { getCollection } from 'astro:content'
import { ENTRIES } from 'src/consts'
import Link from './Link.astro'

const topEscalation = (
	await getCollection('redteam', ({ id }) => {
		return id.startsWith(ENTRIES.ESCALATION)
	})
).sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf())
---

<section>
	<Title>Escalation</Title>
	<ul>
		{
			topEscalation.map((post) => {
				return <Link post={post} />
			})
		}
	</ul>
</section>
